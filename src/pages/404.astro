---
import Layout from "../layouts/Layout.astro";
import Title from "@components/atoms/Title/Title.jsx";
import Button from "@components/atoms/Button/Button.astro";
---

<Layout>
  <section class="error">
    <div class="error__container">
      <Title titleDesc="404 NOT FOUND" clase="message" />
      <p class="error__message">
        La page que vous essayez d'acceder n'est pas disponible
      </p>
      <p class="error__message">Vous pouviez revenir</p>
      <a href=".."><Button content="Retour" id="backButton" /></a>
    </div>
  </section>
</Layout>

<style lang="scss">
  .message {
    color: white;
  }
  .error {
    width: 100%;
    min-height: 100dvh;
    display: grid;
    place-content: center;
    overflow-x: hidden;
    background-color: #140030;
    background: linear-gradient(
        180deg,
        rgb(20, 0, 48) 6%,
        rgba(34, 2, 80, 0.103) 10%
      ),
      url("/img/cuadriculaDifuminada.png");
    background-size: cover;
    &__container {
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 1rem;
      padding: 1rem 2rem;
      border-radius: 13px;
    }
  }

  .error__message {
    font-size: 1.8rem;
    color: rgb(255, 255, 255);
  }

  .error > *:not(:last-child) {
    margin-bottom: 2rem;
  }
</style>
