<div class="bg-icons" id="bg-icons">
  <!-- Dynamically generated span elements will be added here -->
</div>

<script>
  // Select the container where spans will be appended
  const backgroundContainer = document.getElementById("bg-icons")!;

  // Number of spans to be generated
  const numSpans = 20;

  // Dynamically generate spans and append them to the container
  for (let i = 0; i < numSpans; i++) {
    const span = document.createElement("span");
    backgroundContainer.appendChild(span);
  }
</script>
